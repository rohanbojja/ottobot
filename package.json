{
  "name": "ottobot",
  "version": "1.0.0",
  "description": "OttoBot - Interactive coding agent platform with VNC and LangGraph",
  "type": "module",
  "scripts": {
    "dev:api": "MODE=api bun --watch src/index.ts",
    "dev:worker": "MODE=worker bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start:api": "MODE=api bun dist/index.js",
    "start:worker": "MODE=worker bun dist/index.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/swagger": "^0.8.5",
    "@langchain/anthropic": "^0.3.23",
    "@langchain/core": "^0.3.61",
    "@langchain/google-genai": "^0.2.14",
    "@langchain/langgraph": "^0.0.20",
    "@langchain/langgraph-checkpoint": "^0.0.18",
    "@langchain/mcp-adapters": "^0.5.2",
    "@modelcontextprotocol/sdk": "^1.13.3",
    "archiver": "^6.0.2",
    "bullmq": "^4.18.2",
    "dockerode": "^4.0.7",
    "elysia": "^1.3.5",
    "elysia-mcp": "^0.0.12",
    "ioredis": "^5.6.1",
    "langchain": "^0.3.29",
    "nanoid": "^5.1.5",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/archiver": "^6.0.3",
    "@types/bun": "^1.2.17",
    "@types/dockerode": "^3.3.42",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  }
}
